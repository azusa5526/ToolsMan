<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo.AccountSettings">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/displayImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="false"
        android:src="@drawable/defaultavatar" />

    <Button
        android:id="@+id/changeImage"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_above="@+id/changeState"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/registerbtn"
        android:fontFamily="@font/salsa"
        android:text="Change Image"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/changeState"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/registerbtn"
        android:fontFamily="@font/salsa"
        android:text="Change State"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/displayEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Display Account"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/displayStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="defaultStatus"
        android:textSize="16sp" />

</RelativeLayout>