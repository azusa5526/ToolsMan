<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettings">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/displayImage"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="false"
        android:src="@drawable/defaultavatar" />

    <Button
        android:id="@+id/changeImage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/changeState"
        android:layout_centerHorizontal="true"
        android:text="Change Image" />

    <Button
        android:id="@+id/changeState"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:text="Change State" />

    <TextView
        android:id="@+id/displayEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="258dp"
        android:text="Display Account"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/displayStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="defaultStatus"
        android:textSize="16sp" />

</RelativeLayout>