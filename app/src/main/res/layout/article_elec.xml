<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="225dp">


        <TextView
            android:id="@+id/username"
            android:layout_width="234dp"
            android:layout_height="53dp"
            android:text="Poster"
            app:layout_constraintBottom_toTopOf="@+id/post_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Post Title here"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/post_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/post_desc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:text="Post Desc here"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/LikeBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_title" />


        <ImageButton
            android:id="@+id/LikeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:background="#00ffffff"
            android:baselineAligned="false"
            android:src="@mipmap/action_like_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/like_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_desc"
            app:srcCompat="@mipmap/action_like_gray" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginEnd="229dp"
            android:layout_marginRight="229dp"
            android:text="0 Like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/LikeBtn"
            app:layout_constraintTop_toBottomOf="@+id/post_desc" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>