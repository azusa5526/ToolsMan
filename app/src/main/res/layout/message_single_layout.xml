<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageSingleLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageProfileLayout"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/defaultavatar" />

    <TextView
        android:id="@+id/eamilTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/messageProfileLayout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="24dp"
        android:layout_toEndOf="@+id/messageProfileLayout"
        android:text="TextView"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timeTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/messageProfileLayout"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="26dp"
        android:layout_toEndOf="@+id/eamilTextLayout"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/messageTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/messageProfileLayout"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/messageProfileLayout"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textSize="12sp" />

</RelativeLayout>